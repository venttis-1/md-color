{
  "name": "md-color-english",
  "displayName": "md-color-english",
  "description": "translation of md-color (https://github.com/KuKuDeCheng/md-color) .When writing with MarkDown, you can use `<font color=red>content</font>` to add color to the text. md-color is the lazy tool for this operation",
  "publisher": "venttis",
  "repository": "https://github.com/venttis-1/md-color",
  "icon": "img/logo.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.randomColor",
    "onLanguage:markdown"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.randomColor",
        "title": "randomColor"
      },
      {
        "command": "extension.md-color-red",
        "title": "red"
      },
      {
        "command": "extension.md-color-green",
        "title": "green"
      },
      {
        "command": "extension.md-color-orange",
        "title": "orange"
      },
      {
        "command": "extension.md-color-blue",
        "title": "blue"
      },
      {
        "command": "extension.md-color-purple",
        "title": "purple"
      },
      {
        "command": "extension.md-color-brown",
        "title": "brown"
      },
      {
        "command": "extension.md-color-chocolate",
        "title": "chocolate"
      },
      {
        "command": "extension.md-color-camel",
        "title": "camel"
      },
      {
        "command": "extension.md-color-amber",
        "title": "amber"
      },
      {
        "command": "extension.md-color-plum",
        "title": "plum"
      },
      {
        "command": "extension.md-color-royalblue",
        "title": "royalblue"
      },
      {
        "command": "extension.md-color-yellowgreen",
        "title": "yellowgreen"
      },
      {
        "command": "extension.md-color-seagreen",
        "title": "seagreen"
      },
      {
        "command": "extension.md-color-tomato",
        "title": "tomato"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+1",
        "command": "extension.randomColor",
        "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown"
      },
      {
        "key": "cmd+1",
        "command": "extension.randomColor",
        "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "submenu": "md-color",
          "group": "navigation"
        }
      ],
      "md-color": [
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.randomColor",
          "group": "navigation@0"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-red",
          "group": "navigation@1"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-green",
          "group": "navigation@2"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-orange",
          "group": "navigation@3"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-blue",
          "group": "navigation@4"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-purple",
          "group": "navigation@5"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-brown",
          "group": "navigation@6"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-chocolate",
          "group": "navigation@7"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-camel",
          "group": "navigation@8"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-amber",
          "group": "navigation@9"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-plum",
          "group": "navigation@10"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-royalblue",
          "group": "navigation@11"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-yellowgreen",
          "group": "navigation@12"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-seagreen",
          "group": "navigation@13"
        },
        {
          "when": "editorTextFocus && editorHasSelection && resourceLangId == markdown",
          "command": "extension.md-color-tomato",
          "group": "navigation@14"
        }
      ]
    },
    "submenus": [
      {
        "id": "md-color",
        "label": "md-color"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}